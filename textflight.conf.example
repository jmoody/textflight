### DEFAULT CONFIG - DO NOT MODIFY ###
## If you wish to edit config options,	##
## copy this file to one of the			##
## following locations and edit there	##
## instead:								##

# /etc/textflight.conf
# $HOME/.config/textflight.conf
# $HOME/textflight.conf
# ./textflight.conf

# 0 Critical
# 1 Error
# 2 Warning
# 3 Info
# 4 Debug
[logging]
LogLevel = 3
LogFormat = %%(asctime)s %%(levelname)s:%%(message)s
LogFile =

[network]
Address = ::
Port = 10000
Timeout = 600
Ratelimit = 0.5
MinSession = 1
MaxSession = 21600
BufferSize = 4096
SSL = false
SSLCert =
SSLKey =

[client]
SpawnTime = 600
SpawnSafe = 7200
ValidateRegex = [^a-zA-Z0-9 ]+

[data]
DataPath = data/
DatabasePath = database.db
Language = en
LocaleDir = locale

[mining]
MiningInterval = 60
GasIntervalMultiplier = 32
HydrogenCount = 32
OxygenCount = 16
XenonCount = 1
PlanetHeat = 0.25

[crafting]
CraftTime = 10
CostFactorShip = 2
CostFactorHabitable = 1
CostFactorPlanet = 1.5
MaxOutfitSpace = 1024
MaxPlanetSpace = 2048
MaxHabitableSpace = 4096
BreedRate = 60

[faction]
AttackMin = -1
DockMin = 1
JumpMin = 2
TransMin = 3
AttackPenalty = 10
DestroyPenalty = 100
CapturePenalty = 100

# WARNING: Modifying this section will
# cause a completely new universe to
# be generated!
[terrain]
Seed = 0
BrightnessBits = 8
AsteroidRichnessBits = 3
PlanetCountBits = 2
LinkBits = 1
DragBits = 8

